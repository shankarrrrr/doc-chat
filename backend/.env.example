# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-generate-a-new-one
DJANGO_DEBUG=false
DJANGO_ALLOWED_HOSTS=your-backend-domain.railway.app,localhost

# Database (Railway provides these automatically when you add PostgreSQL)
POSTGRES_DB=railway
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-db-password
POSTGRES_HOST=your-db-host.railway.internal
POSTGRES_PORT=5432

# Or use DATABASE_URL format (Railway provides this)
# DATABASE_URL=postgresql://user:password@host:port/database

# CORS Settings (add your frontend URL)
CORS_ALLOWED_ORIGINS=https://your-frontend.railway.app,http://localhost:5173
CSRF_TRUSTED_ORIGINS=https://your-frontend.railway.app,http://localhost:5173

# Supabase (for authentication)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key

# AI Services
GEMINI_API_KEY=your-gemini-api-key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Optional: Twilio for AI calling (if using appointment booking feature)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
